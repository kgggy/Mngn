<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.mngns.prj.user.map.TrainerMapper">
	<select resultType="co.mngns.prj.user.vo.TrainerVO" id="trainerSelectList">
		select trainer.*, client.name from trainer left join client on trainer.client_id = client.client_id
	</select>
	<select resultType="co.mngns.prj.user.vo.TrainerVO" id="trainerSelect">
		<!-- select * from trainer where client_id = #{client_id} -->
	</select>
	
	<!-- 관리자 페이지의 훈련사 전체목록 조회 -->
	<select resultType="co.mngns.prj.user.vo.TrainerVO" id="mtrainerSelectList">
		select t.*, c.* from trainer t join client c on t.client_id = c.client_id
	</select>

</mapper>